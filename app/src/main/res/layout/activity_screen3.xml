<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".Screen3">

   <ImageView
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:src="@drawable/ic_baseline_account_box_24"
       android:layout_gravity="end"
       >

   </ImageView>


    <TextView
        android:id="@+id/helloname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:textStyle="bold"
        />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttomboundary"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/deliver1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Delivery"
                android:textStyle="italic"
                android:layout_margin="2dp"/>


            <RadioButton
                android:id="@+id/takeaway2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Take away"
                android:layout_margin="2dp"/>


            <RadioButton
                android:id="@+id/dine3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:checked="true"
                android:text="Dine-in" />

        </RadioGroup>

        <TextView

            android:layout_width="83dp"
            android:layout_height="49dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_baseline_train_24"
            android:text="Deliver on Train" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="67dp">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imaID"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:iss_auto_cycle="true"
            app:iss_period="3000"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Explore Menu:"
        android:layout_margin="20dp"
        android:textColor="@color/teal_700"/>


    <GridView
        android:id="@+id/listviewfetchfooddetails"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:numColumns="3" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imageSlideID"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:iss_auto_cycle="true"
            app:iss_period="3000"/>

    </LinearLayout>

</LinearLayout>